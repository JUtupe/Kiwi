<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseKiwiTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#3a7200</item>
        <item name="colorPrimaryDark">#074600</item>
        <item name="colorSecondary">#62717b</item>
        <item name="colorAccent">#6aa138</item>
        <item name="colorSurface">#37474F</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>

    <style name="WindowAnimationStyle">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_in</item>
    </style>

    <style name="KiwiTheme" parent="BaseKiwiTheme">
        <item name="android:colorBackground">#37474F</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
    </style>

    <style name="KiwiTheme.Card">
        <item name="cardBackgroundColor">#263238</item>
    </style>

    <style name="KiwiDialog" parent="Theme.MaterialComponents.Dialog.FixedSize">
        <item name="android:backgroundTint">#37474F</item>
    </style>

    <style name="KiwiDialog.Large">
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>

    <style name="KiwiTheme.SearchBar">
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/background_search</item>
    </style>
</resources>